<%- include("header") %> 

    <div class="box" id="heading">
      <h1><%= todaysDate %></h1>
    </div>

    <div class="box">
      <% for(var i = 0; i < addNewItem.length; i++) { %>
      <div class="item">
        <input type="checkbox" />
        <p><%= addNewItem[i] %></p>
      </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="addTodo" placeholder="New Item" autocomplete="off" />
        <button type="submit" name="list" value=<%=todaysDate%>>+</button>
      </form>
    </div>

    <%- include("footer") %> 